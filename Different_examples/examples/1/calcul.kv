CalculApp:
<CalculApp@PageLayout>:
    BoxLayout
        orientation: 'vertical'
        padding: 15

        Label:
            text: app.info_up
            size_hint: 1, .1

        Label:
            text: app.info
            font_size: 40
            size_hint: 1, .2
            on_press:

        BoxLayout:
            orientation: 'horizontal'
            padding:
            spacing: 10
            size_hint: 1, .7

            GridLayout:
                cols: 3
                size_hint_x: .7
                spacing: 5

                Button :
                    text: '%'
                    on_press:
                Button:
                    text: 'CE'
                    on_press:
                Button:
                    text: "C"
                    on_press: app.clear_calc()

                Button:
                    text: '1/x'
                    on_press:
                Button:
                    text: 'sqr'
                    on_press:
                Button:
                    text: 'sqrt'
                    on_press:

                Button:
                    text: '7'
                    on_press: app.input_value(self)
                Button:
                    text: '8'
                    on_press: app.input_value(self)
                Button:
                    text: '9'
                    on_press: app.input_value(self)

                Button:
                    text: '4'
                    on_press: app.input_value(self)
                Button:
                    text: '5'
                    on_press: app.input_value(self)
                Button:
                    text: '6'
                    on_press: app.input_value(self)

                Button:
                    text: '1'
                    on_press: app.input_value(self)
                Button:
                    text: '2'
                    on_press: app.input_value(self)
                Button:
                    text: '3'
                    on_press: app.input_value(self)

                Button:
                    text: '+/-'
                    on_press: app.sign_before_number()
                Button:
                    text: '0'
                    on_press: app.input_value(self)
                Button:
                    text: '.'
                    on_press: app.input_value(self)

            GridLayout:
                cols: 1
                size_hint_x: .3
                spacing: 7

                Button:
                    text: "<="
                    on_press: app.del_calc()
                Button:
                    text: '/'
                    on_press: app.sign(self)
                Button:
                    text: '*'
                    on_press: app.sign(self)
                Button:
                    text: '-'
                    on_press: app.sign(self)
                Button:
                    text: '+'
                    on_press: app.sign(self)
                Button:
                    text: '='
                    on_press: app.equals_calc()
    GridLayout:
        cols: 1

        Button:
            text: '1'